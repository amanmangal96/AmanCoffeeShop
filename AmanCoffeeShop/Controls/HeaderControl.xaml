<UserControl x:Class="AmanCoffeeShop.Controls.HeaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AmanCoffeeShop.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#F05a28">
        <StackPanel HorizontalAlignment="Center" Background="#F05a28" Orientation="Horizontal">
            <Image Source="/Images/logo.png" Width="100" Margin="5"></Image>
            <TextBlock Text="Customer App" FontSize="30" Foreground="White" VerticalAlignment="Center"></TextBlock>
            <TextBlock Text="Version 1.0" FontSize="16" Foreground="#333333" VerticalAlignment="Bottom" Margin="10 0 0 20"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
