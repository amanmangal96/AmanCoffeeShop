<Window x:Class="AmanCoffeeShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AmanCoffeeShop"
        xmlns:controls="clr-namespace:AmanCoffeeShop.Controls" 
        xmlns:view="clr-namespace:AmanCoffeeShop.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Menu FontSize="20">
            <MenuItem Header="View">
                <MenuItem Header="_Customers"/>
                <MenuItem Header="_Products"/>
            </MenuItem>
        </Menu>

        <controls:HeaderControl Grid.Row="1"></controls:HeaderControl>
        <view:CustomersView Grid.Row="2"></view:CustomersView>
        <StatusBar Grid.Row="3" >
            <StatusBarItem FontSize="20" Content=" (c) Aman Coffee Shop"></StatusBarItem>
        </StatusBar>
    </Grid>
</Window>

